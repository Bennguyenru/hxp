<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_hexapay_kyc_tree" model="ir.ui.view">
        <field name="name">hexapay.kyc.tree</field>
        <field name="model">hexapay.kyc</field>
        <field name="arch" type="xml">
            <list decoration-muted="state=='cancelled'" decoration-success="state=='done'">
                <field name="code"/>
                <field name="name"/>
                <field name="date"/>
                <field name="user_id"/>
                <field name="state" widget="badge" 
                       decoration-info="state=='draft'"
                       decoration-warning="state=='pending'"
                       decoration-success="state=='done'"/>
            </list>
        </field>
    </record>
    
    <!-- Form View -->
    <record id="view_hexapay_kyc_form" model="ir.ui.view">
        <field name="name">hexapay.kyc.form</field>
        <field name="model">hexapay.kyc</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" type="object" string="Confirm" 
                            invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_done" type="object" string="Done" 
                            invisible="state != 'confirmed'" class="oe_highlight"/>
                    <button name="action_cancel" type="object" string="Cancel" 
                            invisible="state in ['done', 'cancelled']"/>
                    <button name="action_reset_to_draft" type="object" string="Reset to Draft" 
                            invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,confirmed,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="code" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="date"/>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Internal Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="view_hexapay_kyc_search" model="ir.ui.view">
        <field name="name">hexapay.kyc.search</field>
        <field name="model">hexapay.kyc</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="user_id"/>
<filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
<filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
<filter string="My Records" name="my_records" domain="[('user_id', '=', uid)]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" domain="[]" context="{'group_by': 'state'}"/>
                    <filter string="Responsible" name="group_user" domain="[]" context="{'group_by': 'user_id'}"/>
                    <filter string="Date" name="group_date" domain="[]" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_hexapay_kyc" model="ir.actions.act_window">
        <field name="name">HexapayKyc</field>
        <field name="res_model">hexapay.kyc</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new hexapaykyc
            </p>
        </field>
    </record>
    
    <!-- Menu -->
    <menuitem id="menu_hexapay_kyc"
              name="HexapayKyc"
              parent="hexapay_core.menu_hexapay_core_root"
              action="action_hexapay_kyc"
              sequence="10"/>
</odoo>


